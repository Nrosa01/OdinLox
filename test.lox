// You can't do this with the built-in procedure 'print'. 
// In short, print is a language keyword same as if, var, while etc.

// Closures
fun outer() {
  var x = "value";
  fun middle() {
    fun inner() {
      print x;
    }

    print "create inner closure";
    return inner;
  }

  print "return from outer";
  return middle;
}

var mid = outer();
var in = mid();
in();
